@require 'base-config'

hLoadingGlobal = 4px

.{cPre}loading-global
	size_(100%, hLoadingGlobal)
	position_(fixed, 0 0 null 0)
	z-index 9999
	overflow hidden
	background-color #fcfcfc

	&:before
		display block
		position_(absolute, null null null -200px)
		z-index 9999
		content ''
		size_(200px, hLoadingGlobal)
		background-color cPrimary
		animation loadingGlobal 2s linear infinite

@keyframes loadingGlobal
	from
		left -200px
		width 30%
	50%
		width 30%
	70%
		width 70%
	80%
		left 50%
	95%
		left 120%
	to
		left 100%
